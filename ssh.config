# nice document on this
# https://www.cyberciti.biz/faq/create-ssh-config-file-on-linux-unix/
Host sys*dev1 puppet* kibana elasticsiem
  ProxyCommand ssh -F ssh.config -q masum@lap-macmini nc %h 22
  user masum

Host salt* sys*dev2 monitoring
  ProxyCommand ssh -F ssh.config -q masum@lap-asus nc %h 22
  user masum

Host sys*dev3 monitoring
  ProxyCommand ssh -F ssh.config -q masum@lap-lenovo nc %h 22
  user masum

Host sys*dev4 monitoring
  ProxyCommand ssh -F ssh.config -q masum@ubu-incus nc %h 22
  user masum

Host sys*dev5 monitoring
  ProxyCommand ssh -F ssh.config -q masum@debian13 nc %h 22
  user masum

Host esxir320 vcenter320
  ProxyCommand ssh -F ssh.config -q masum@jumphost nc %h 22
  user masum

Host saltmaster puppetmaster sys* net*
  StrictHostKeyChecking no

Host *
  ControlMaster auto
  ForwardAgent no
  ServerAliveInterval 60
  ServerAliveCountMax 30
  ControlPersist 30m
  #ControlPath ~/.ssh/controlmasters/%r@%h:%p
